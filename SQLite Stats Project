/* create the database */
CREATE DATABASE thriftshop;


-- now create the table for mens clothing
CREATE TABLE inventory (id INTEGER PRIMARY KEY, item TEXT, size TEXT, color TEXT, price INTEGER, quantity_in_stock NUMERIC);


